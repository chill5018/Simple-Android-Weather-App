<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                tools:background="#ffaa00">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/circleImageView" android:layout_alignParentTop="true" android:layout_alignParentStart="true"

            android:src="@drawable/bg_temperature"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iconImageView" android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:layout_toEndOf="@+id/circleImageView" android:src="@drawable/snow"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/dayNameLabel" android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:layout_toEndOf="@+id/iconImageView" android:textSize="20sp" android:textColor="#ffffffff"
            tools:text="Wednesday"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27"
            android:id="@+id/tempLabel"
            android:layout_alignTop="@id/circleImageView"
            android:layout_alignBottom="@id/circleImageView"
            android:layout_alignLeft="@id/circleImageView"
            android:layout_alignRight="@id/circleImageView"
            android:gravity="center"
            android:textColor="#f25019"
            tools:text="100"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3" android:layout_centerVertical="true" android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"/>
</RelativeLayout>